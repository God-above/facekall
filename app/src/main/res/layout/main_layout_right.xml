<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical"
              android:background="@android:color/black"
              android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <com.tencent.avsdk.view.CircleImageView
            android:id="@+id/right_menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_peer_icon"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/right_menu_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加昵称"
            android:textColor="@android:color/holo_blue_light"
            android:layout_marginLeft="33dp"
            android:layout_marginStart="33dp"
            android:layout_above="@+id/right_menu_mobile"
            android:layout_toRightOf="@+id/right_menu_icon"
            android:layout_toEndOf="@+id/right_menu_icon"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:id="@+id/right_menu_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@+id/right_menu_icon"
            android:layout_alignLeft="@+id/right_menu_nickname"
            android:layout_alignStart="@+id/right_menu_nickname"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:drawableLeft="@drawable/search"
            />

        <ImageView
            android:id="@+id/right_menu_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:src="@drawable/tab_setting"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">


    </RelativeLayout>

    <Button
        android:id="@+id/right_menu_expression"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="表情"/>

    <Button
        android:id="@+id/right_menu_file"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="文件"/>

    <Button
        android:id="@+id/right_menu_contacts"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="联系人"/>

</LinearLayout>