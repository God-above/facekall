<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_center_top_height"
        android:layout_gravity="center_horizontal"
        android:background="@color/gray_normal">

        <TextView
            android:id="@+id/tv_add_remark_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/back_click"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:clickable="true"
            android:text="@string/new_remark"/>

        <TextView
            android:id="@+id/tv_add_remark_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:clickable="true"
            android:paddingRight="20dp"
            android:text="@string/save"/>
    </RelativeLayout>

    <TextView
        android:layout_marginTop="@dimen/user_center_top_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/user_info_added_button_margin"
        android:text="标签名"/>


    <EditText
        android:id="@+id/et_remark_name"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/user_info_added_button_margin"
        android:layout_marginRight="@dimen/user_info_added_button_margin"
        android:layout_height="@dimen/user_info_added_button_height"/>

    <GridView
        android:layout_marginTop="20dp"
        android:id="@+id/gridview_add_remark"
        android:layout_width="match_parent"
        android:numColumns="4"
        android:layout_height="wrap_content">

    </GridView>



</LinearLayout>